<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.welcome.flamesgame.MainActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="FLAMES"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"/>
    <EditText
        android:id="@+id/etYourName"
        android:layout_below="@+id/appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="Enter your name"/>
    <EditText
        android:id="@+id/etDear"
        android:layout_below="@+id/etYourName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your dear name"/>
    <Button
        android:id="@+id/btCalculate"
        android:layout_below="@+id/etDear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/tvResult"
        android:layout_below="@+id/btCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Result::"/>
</RelativeLayout>
